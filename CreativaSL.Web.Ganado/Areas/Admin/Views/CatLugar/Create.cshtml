                    dataType: "json",
                    type: "POST",
                    error: function () {
                        $("#ListEstado").html('');
                    },
                    success: function (estado) {

                        var items = "";
                        for (var i = 0; i < estado.length; i++) {
                            items += "<option value=\"" + estado[i].codigoEstado + "\">" + estado[i].descripcion + "</option>";
                        }
